@{
    Layout = null;
}
@model List<Ticket>
<!DOCTYPE html>
<html>
<head>
    <title>All Tickets</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
        }

        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: linear-gradient(to right, #434343 0%, black 100%);
        }

        .container {
            width: 100%;
            display: flex;
            overflow: auto;
            min-height: 100vh;
            align-items: flex-start;
            flex-direction: column;
            justify-content: flex-start;
        }

        .text {
            font-family: Arial, sans-serif;
            color: rgb(255, 255, 255);
            width: 382px;
            height: 98px;
            align-self: center;
            text-align: center;
            text-transform: capitalize;
        }

        .container1 {
            flex: 0 0 auto;
            width: 100%;
            display: flex;
            position: relative;
            align-items: center;
            border-color: #46c6d2;
            border-style: dashed;
            border-width: 2px;
            justify-content: flex-start;
        }

        .container2 {
            flex: 0 0 auto;
            width: 200px;
            height: 100px;
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            color: rgb(251, 251, 251);
        }

        .text4 {
            font-family: Arial, sans-serif;
            color: rgb(251, 251, 251);
        }

        .container3 {
            top: -1px;
            flex: 0 0 auto;
            left: 445px;
            width: 200px;
            height: 100px;
            display: flex;
            position: absolute;
            flex-wrap: wrap;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            color: rgb(251, 251, 251);
        }

        .text5 {
            font-family: Arial, sans-serif;
            color: rgb(251, 251, 251);
        }

        .container4 {
            top: 0px;
            flex: 0 0 auto;
            left: 878px;
            width: 299px;
            height: 100px;
            margin: auto;
            display: flex;
            position: absolute;
            align-items: flex-end;
            flex-direction: column;
            justify-content: center;
            color: rgb(251, 251, 251);
        }

        .text6 {
            font-family: Arial, sans-serif;
            color: rgb(251, 251, 251);
            width: 269px;
        }

        .container5 {
            flex: 0 0 auto;
            right: 30px;
            width: 200px;
            bottom: -4px;
            height: 100px;
            display: flex;
            position: absolute;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            color: rgb(251, 251, 251);
        }


        .text7 {
            font-family: Arial, sans-serif;
            color: rgb(251, 251, 251);
        }

        #ticketModal {
            display: none;
            position: fixed;
            top: 10%;
            left: 20%;
            width: 60%;
            height: 70%;
            background: white;
            border: 1px solid #000;
            padding: 20px;
            z-index: 9999;
            overflow: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text">
            <span>All Tickets</span>
            <br>
            <br>
        </h1>
        <div class="container1">
            <div class="container2">
                <h1 class="text4">Ticket Number</h1>
            </div>
            <div class="container3">
                <h1 class="text5">Subject</h1>
            </div>
            <div class="container4">
                <h1 class="text6">Last Updated</h1>
            </div>
            <div class="container5">
                <h1 class="text7">Status</h1>
            </div>
        </div>

        @foreach (var ticket in Model)
        {
            <div class="container1">
                <div class="container2">
                    <p>@ticket.TicketId</p>
                </div>
                <div class="container3">
                    <p>@ticket.TicketSubject</p>
                </div>
                <div class="container4">
                    <p>@ticket.TicketCreationDate</p>
                </div>
                <div class="container5">
                    <p style="color: @(ticket.TicketStatus == "Open" ? "#2deb5f" : "#e81c1c")">@ticket.TicketStatus</p>
                </div>
            </div>
        }
    </div>

    <!-- Modal for Ticket Details -->
    <div id="ticketModal">
        <h2>Ticket Details</h2>
        <p><strong>Subject:</strong> <span id="modalSubject"></span></p>
        <p><strong>Body:</strong></p>
        <textarea id="modalBody" rows="10" cols="50" readonly></textarea>

        <h2>Reply</h2>
        <textarea id="replyBody" rows="5" cols="50"></textarea><br><br>
        <button id="sendReply">Send</button>
        <button style="float: right;" onclick="closeModal()">Close</button>
    </div>

    <script>
        // Function to open the modal and populate it with ticket details
        function openModal(ticketSubject, ticketBody) {
            document.getElementById('ticketModal').style.display = 'block';
            document.getElementById('modalSubject').textContent = ticketSubject;
            document.getElementById('modalBody').textContent = ticketBody;
        }

        // Function to close the modal
        function closeModal() {
            document.getElementById('ticketModal').style.display = 'none';
        }

        // Function to handle reply sending (this is just a mockup)
        document.getElementById('sendReply').addEventListener('click', function () {
            var reply = document.getElementById('replyBody').value;
            alert("Reply sent: " + reply);
            closeModal();
        });

        // Add click event to all ticket rows to open the modal
        var ticketRows = document.querySelectorAll('.container1:not(:first-child)');
        ticketRows.forEach(function (row, index) {
            row.addEventListener('click', function () {
                // Placeholder ticket body for demonstration
                openModal(row.querySelector('.container3 p').textContent, "Sample ticket body for demonstration");
            });
        });
    </script>
</body>
</html>