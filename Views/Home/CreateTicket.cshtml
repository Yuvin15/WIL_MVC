@{
    Layout = null;
}

@{
    ViewData["Title"] = "Create a New Ticket";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<style>
    body, html {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }

    .container {
        width: 100%;
        display: flex;
        overflow: auto;
        min-height: 100vh;
        align-items: center;
        flex-direction: column;
        background-image: linear-gradient(to right, #434343 0%, black 100%);
        padding: 40px;
    }

    .title {
        color: #ffffff;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .label {
        color: #ffffff;
        font-size: 20px;
        margin-bottom: 10px;
    }

    .input {
        width: 100%;
        padding: 10px;
        border: 2px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
        font-size: 16px;
    }

    .input-large {
        height: 240px;
    }

    .button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 240px;
        height: 58px;
        background-color: rgb(13, 117, 232);
        color: #ffffff;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .button:hover {
            background-color: #0a75c2;
        }

        .button span {
            text-align: center;
        }
</style>

<div class="container">
    <form asp-action="CreateTicket" asp-controller="Home" method="post" enctype="multipart/form-data">
        <label for="subject" class="label">Ticket Subject:</label>
        <input type="text" id="subject" name="subject" class="input" required>

        <label for="body" class="label">Ticket Body:</label>
        <textarea id="body" name="body" class="textarea input input-large" required></textarea>

        <div class="attachment-container">
            <label for="attachments" class="label">Add Attachments:</label>
            <input type="file" id="attachments" name="attachments" class="file-input" multiple>
            <p class="label">Note: You can select multiple files at once.</p>
        </div>
        <input type="submit" value="Submit Ticket" class="button">
    </form>
</div>

