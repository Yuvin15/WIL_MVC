﻿@{
    Layout = null;
    var displayName = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;

}

@{
    ViewData["Title"] = "Create a New Ticket";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<style>
    body, html {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }

    .container {
        width: 100%;
        display: flex;
        overflow: auto;
        min-height: 100vh;
        align-items: center;
        flex-direction: column;
        background-image: linear-gradient(to right, #434343 0%, black 100%);
        padding: 40px;
    }

    .title {
        color: #ffffff;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .label {
        color: #ffffff;
        font-size: 20px;
        margin-bottom: 10px;
    }

    .input {
        width: 100%;
        padding: 10px;
        border: 2px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
        font-size: 16px;
    }

    .input-large {
        height: 240px;
    }

    .button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 240px;
        height: 58px;
        background-color: rgb(13, 117, 232);
        color: #ffffff;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .button:hover {
            background-color: #0a75c2;
        }

    .create-ticket-container {
        width: 100%;
        display: flex;
        justify-content: flex-start;
        padding: 10px;
    }

    .create-ticket-btn {
        background-color: black;
        color: #ffffff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
        font-family: Arial, sans-serif;
        transition: background-color 0.3s;
    }

        .create-ticket-btn:hover {
            background-color: #349b9d;
        }

    #attachment-previews img {
        max-width: 150px;
        max-height: 150px;
        margin: 10px;
    }

    .logout-container {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .logout-btn {
        background-color: #ff4b5c;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 9999;
    }

    .modal-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fefefe;
        padding: 20px;
        width: 300px;
        border: 1px solid #888;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 10000;
    }

    .modal-close {
        color: #aaa;
        float: right;
        font-size: 24px;
        cursor: pointer;
    }

        .modal-close:hover {
            color: #000;
        }

    .success-modal-content {
        background-color: #4CAF50;
        color: white;
        border-color: #388E3C;
    }

        .success-modal-content p {
            margin: 0;
            padding: 0;
        }

</style>
<div class="logout-container">
    <!-- Display the user's name or email -->
    <span style="margin-right: 15px; color: white;">Logged in as: @displayName</span>
    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
        <button type="submit" class="logout-btn">Logout</button>
    </form>
</div>

<div class="container">
    <div class="create-ticket-container">
        <a href="@Url.Action("YourTickets", "Home")">
            <button class="create-ticket-btn">Go back to see your tickets</button>
        </a>
    </div>

    <form id="ticketForm" asp-action="CreateTicket" asp-controller="Home" method="post" enctype="multipart/form-data">
        <label for="subject" class="label">Ticket Subject:</label>
        <input type="text" id="subject" name="subject" class="input" required>

        <label for="body" class="label">Ticket Body:</label>
        <textarea id="body" name="body" class="textarea input input-large" required></textarea>

        <div class="attachment-container">
            <label for="attachments" class="label">Add Attachments:</label>
            <input type="file" id="attachments" name="attachments" class="file-input" multiple>
            <p class="label">Note: You can select multiple files at once.</p>

            <div id="attachment-previews">
                <img id="preview1" src="#" alt="Preview 1" style="display:none;" />
                <img id="preview2" src="#" alt="Preview 2" style="display:none;" />
                <img id="preview3" src="#" alt="Preview 3" style="display:none;" />
            </div>
        </div>

        <input id="submitTicketBtn" type="submit" value="Submit Ticket" class="button">
    </form>
</div>

<!-- Success Modal -->
<div id="successModal" class="modal-overlay">
    <div class="modal-content success-modal-content">
        <span class="modal-close">&times;</span>
        <p>Your ticket has been successfully submitted!</p>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var successModal = document.getElementById('successModal');
        var closeBtn = document.querySelectorAll('.modal-close');
        var ticketForm = document.getElementById('ticketForm');
        var submitTicketBtn = document.getElementById('submitTicketBtn');

        function openSuccessModal() {
            successModal.style.display = 'block';
        }

        function closeSuccessModal() {
            successModal.style.display = 'none';
        }

        closeBtn.forEach(btn => {
            btn.addEventListener('click', function () {
                closeSuccessModal();
                ticketForm.submit(); // Actual form submission after modal closure
            });
        });

        window.addEventListener('click', function (event) {
            if (event.target === successModal) {
                closeSuccessModal();
                ticketForm.submit(); // Actual form submission when clicked outside modal
            }
        });

        submitTicketBtn.addEventListener('click', function (e) {
            e.preventDefault(); // Prevent default form submission
            openSuccessModal();
        });

    document.getElementById('attachments').addEventListener('change', function (event) {
        var files = event.target.files;
        for (var i = 0; i < files.length && i < 3; i++) {
            var file = files[i];
            if (file && file.type.startsWith('image/')) { // Ensure it's an image
                var reader = new FileReader();
                reader.onload = (function (imgTag) {
                    return function (e) {
                        imgTag.src = e.target.result;
                        imgTag.style.display = 'block';
                    };
                })(document.getElementById('preview' + (i + 1)));
                reader.readAsDataURL(file);
            }
        }
        }); 
        document.querySelector('form').addEventListener('submit', function (e) {
            e.preventDefault();
            var formData = new FormData(this);

            fetch(this.action, {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        openSuccessModal();
                    } else {
                        console.error("Error submitting the ticket");
                    }
                })
                .catch(error => {
                    console.error('There was an error!', error);
                });
        });
    });
</script>