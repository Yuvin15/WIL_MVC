@model List<Ticket>

@{
    Layout = null;
    // Fetch the display name for the logged-in user
    var displayName = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
}

<!DOCTYPE html>
<html>
<head>
    <title>Student Tickets</title>
    <style>

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100%;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: linear-gradient(to right, #434343 0%, black 100%);
        }

        .container {
            width: 100%;
            display: flex;
            overflow: auto;
            min-height: 100vh;
            align-items: flex-start;
            flex-direction: column;
            justify-content: flex-start;
        }

        .text {
            font-family: Arial, sans-serif;
            color: #ffffff;
            width: 382px;
            height: 98px;
            align-self: center;
            text-align: center;
            text-transform: capitalize;
        }

        .container1 {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: 10px 0;
        }

        .container2 {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #FFFFFF;
            width: 20%;
        }

        .text4 {
            font-family: Arial, sans-serif;
            color: rgb(251, 251, 251);
        }

        .container3 {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #FFFFFF;
            width: 20%;
        }

        /* Added styles for the logout button */
        .logout-container {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .logout-btn {
            background-color: #ff4b5c;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .text5 {
            font-family: Arial, sans-serif;
            color: #ffffff;
        }

        .container4 {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #FFFFFF;
            width: 20%;
        }

        .text6 {
            font-family: Arial, sans-serif;
            color: rgb(251, 251, 251);
        }

        .container5 {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #FFFFFF;
            width: 20%;
        }

        .text7 {
            font-family: Arial, sans-serif;
            color: #ffffff;
        }

        .create-ticket-container {
            width: 100%;
            display: flex;
            justify-content: flex-start;
            padding: 10px;
        }

        .create-ticket-btn {
            background-color: black;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            font-family: Arial, sans-serif;
            transition: background-color 0.3s;
        }

            .create-ticket-btn:hover {
                background-color: #349b9d;
            }

        .ticket-entry {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            cursor: pointer;
            padding: 10px 0;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.7);
            color:white;
            z-index: 1000;
        }

        .modal-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-image: linear-gradient(to right, #434343 0%, black 100%);
            width: 50%;
            border-radius: 5px;
        }


    </style>
</head>
<div class="logout-container">
    <!-- Display the user's name or email -->
    <span style="margin-right: 15px; color: white;">Logged in as: @displayName</span>
    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
        <button type="submit" class="logout-btn">Logout</button>
    </form>
</div>
<div id="ticketModal" class="modal">
    <div class="modal-content">
        <h2>Ticket Details</h2>
        <p><strong>Subject:</strong> <span id="modalSubject"></span></p>
        <p><strong>Body:</strong> <span id="modalBody"></span></p>
    </div>
</div>

<body>
    <div class="container">
        <div class="create-ticket-container">
            <a href="@Url.Action("CreateTicket", "Home")">
                <button class="create-ticket-btn">Create A New Ticket</button>
            </a>
        </div>
        <h1 class="text">
            <span>Your Tickets</span>
            <br>
            <br>
        </h1>
        <div class="container1">
            <div class="container2">
                <h1 class="text4">Ticket Number</h1>
            </div>
            <div class="container3">
                <h1 class="text5">Subject</h1>
            </div>
            <div class="container4">
                <h1 class="text6">Last Updated</h1>
            </div>
            <div class="container5">
                <h1 class="text7">Status</h1>
            </div>
        </div>
        <!-- Display the tickets -->
        @foreach (var ticket in Model)
        {
            <div class="ticket-entry" data-subject="@ticket.TicketSubject" data-body="@ticket.TicketBody" onclick="showModal(this)">
                <div class="container2">
                    <p>@ticket.TicketId</p>
                </div>
                <div class="container3">
                    <p>@ticket.TicketSubject</p>
                </div>
                <div class="container4">
                    <p>@ticket.TicketCreationDate</p>
                </div>
                <div class="container5">
                    <p style="color: @(ticket.TicketStatus == "Open" ? "#2deb5f" : "#e81c1c")">@ticket.TicketStatus</p>
                </div>
            </div>
        }
    </div>
    <script>
        function showModal(element) {
            const subject = element.getAttribute("data-subject");
            const body = element.getAttribute("data-body");
            document.getElementById("modalSubject").textContent = subject;
            document.getElementById("modalBody").textContent = body;

            const modal = document.getElementById("ticketModal");
            modal.style.display = "block";

            modal.onclick = function (event) {
                if (event.target === modal) {
                    modal.style.display = "none";
                }
            }
        }
    </script>
</body>
</html>