@{
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <title>Student Tickets</title>
    <style>
        
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100%;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: linear-gradient(to right, #434343 0%, black 100%);
        }

        .container {
            width: 100%;
            display: flex;
            overflow: auto;
            min-height: 100vh;
            align-items: flex-start;
            flex-direction: column;
            justify-content: flex-start;
        }

        .text {
            font-family: Arial, sans-serif;
            color: #ffffff;
            width: 382px;
            height: 98px;
            align-self: center;
            text-align: center;
            text-transform: capitalize;
        }

        .container1 {
            flex: 0 0 auto;
            width: 100%;
            display: flex;
            position: relative;
            align-items: center;
            /*border-color: #46c6d2;
            border-style: dashed;*/
            border-width: 2px;
            justify-content: flex-start;
        }

        .container2 {
            flex: 1 0 20%;
            width: 200px;
            height: 100px;
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

        .text4 {
            font-family: Arial, sans-serif;
            color: rgb(251, 251, 251);
        }

        .container3 {
            top: unset;
            left: unset;
            flex: 1 0 20%;
            width: 200px;
            height: 100px;
            display: flex;
            position: relative;
            flex-wrap: wrap;
            align-items: center;
            flex-direction: column;
            justify-content: center;
        }

        .text5 {
            font-family: Arial, sans-serif;
            color: #ffffff;
        }

        .container4 {
            top: unset;
            left: unset;
            flex: 1 0 20%;
            width: 299px;
            height: 100px;
            margin: auto;
            display: flex;
            position: relative;
            align-items: flex-end;
            flex-direction: column;
            justify-content: center;
        }

        .text6 {
            font-family: Arial, sans-serif;
            color: #ffffff;
            width: 269px;
        }

        .container5 {
            flex: 1 0 20%;
            top: unset;
            left: unset;
            right: 30px;
            width: 200px;
            bottom: -4px;
            height: 100px;
            display: flex;
            position: relative;
            align-items: center;
            flex-direction: column;
            justify-content: center;
        }

        .text7 {
            font-family: Arial, sans-serif;
            color: #ffffff;
        }
        .create-ticket-container {
            width: 100%;
            display: flex;
            justify-content: flex-start; 
            padding: 10px; 
        }

        .create-ticket-btn {
            background-color: black; 
            color: #ffffff; 
            border: none; 
            border-radius: 5px; 
            padding: 10px 20px; 
            cursor: pointer; 
            font-family: Arial, sans-serif; 
            transition: background-color 0.3s; 
        }

        .create-ticket-btn:hover {
            background-color: #349b9d; 
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="create-ticket-container">
            <a href="@Url.Action("CreateTicket", "Home")">
                <button class="create-ticket-btn">Create A New Ticket</button>
            </a>
        </div>
        <h1 class="text">
            <span>Your Tickets</span>
            <br>
            <br>
        </h1>
        <div class="container1">
            <div class="container2">
                <h1 class="text4">Ticket Number</h1>
            </div>
            <div class="container3">
                <h1 class="text5">Subject</h1>
            </div>
            <div class="container4">
                <h1 class="text6">Last Updated</h1>
            </div>
            <div class="container5">
                <h1 class="text7">Status</h1>
            </div>
        </div>
    </div>
</body>
</html>
